{
  "name": "Python 3 Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.12",
  "features": {},
  "forwardPorts": [8000],
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "remoteUser": "vscode"
}
